<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_65"
        android:src="@drawable/icon_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_download"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_85"
        android:layout_marginTop="@dimen/dp_65"
        android:src="@drawable/icon_download"
        app:layout_constraintStart_toEndOf="@+id/image_home"
        app:layout_constraintTop_toTopOf="@+id/tabs"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_library"
        android:layout_width="26dp"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_marginEnd="@dimen/dp_8"
        android:src="@drawable/icon_lib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toEndOf="@+id/image_download"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="@dimen/dp_370"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:tabGravity="fill"
        app:tabMode="fixed"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="9dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_370"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs"/>

</android.support.constraint.ConstraintLayout>
